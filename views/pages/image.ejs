<!DOCTYPE html>
<html lang="en">

<head>
    <!-- iocluding ejs head file -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">



    <!-- bootstarp link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>Admin panel || Image_section</title>
</head>


<body>

    <style>
        .imagetopic {
            height: 40px;
            width: 40px;
        }



        /* tablle style */
        /* styling image table */

        /* table desing */

        .fa-trash {
            color: red;
            cursor: pointer;
        }

        .fa-pen {
            color: rgb(216, 128, 14);
        }


        thead {
            background-color: antiquewhite;
        }

        th {
            margin: 40px;
        }

        table,
        td,
        th {
            padding-left: 20px;
            padding-right: 20px;
            text-align: center;
            margin: auto;
        }

        table {
            margin: 30px;
        }

        tr:nth-child(odd) {
            background-color: rgb(66, 235, 241);
        }

        thead,
        th,
        tr,
        td {
            border: 1px solid;
        }

        .imagebox {

            height: 40px;
            width: 40px;
        }

        .for2mbody {
            background-color: aqua;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            border-radius: 20px;
            margin-top: 50px;
        }

        /* inpput validdation */

        input.ng-touched.ng-invalid {
            border-left: 20px solid red;
        }
    </style>



    <!-- header section -->
    <section>
        <%-include('../partials/header')%>
    </section>


    <!-- tempelate driven form -->
    <!-- post foorm -->



    <div class="conatiner-fluid">
        <div class="row justify-content-center align-items-center">

            <div class="col-sm-12 col-xl-6 col-lg-6 col-md-6 align-items-center justify-content-center text-center"
                style="background-color: antiquewhite ; border-radius: 25px; margin-bottom: 40px; margin-top: 40px;">

                <h1>
                    Upload Image
                </h1>
                <div>

                    <% if(message !="" ){%>
                        <div class="alert alert-success">
                            <%=message%>

                        </div>

                        <%}%>
                </div>



                <form action="/image" method="POST" autocomplete="off" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Imageurl">Imageurl</label>
                        <input type="file" class="form-control" id="Imageurl" name="Imageurl" placeholder="Url Here"
                            required>
                    </div>


                    <div class="form-group">
                        <label for="Service">Serive</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="Service"
                            placeholder="Service Here" required>
                    </div>
                    <button type="submit" class="btn btn-primary"
                        [disabled]="imageform.invalid || imageform.untouched">Submit</button>
                </form>

            </div>
        </div>
    </div>



    <!-- immage div -->



    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">

            <div class="col-sm-12 col-lg-12 col-md-12 col-xl-12 justify-content-center align-items-center"
                style="display: flex; justify-content: center; align-items: center; margin-bottom: 40px;">


                <% if(data.length!=="" ){%>

                    <table>

                        <thead>
                            <th>Id</th>
                            <th>service</th>
                            <th>Image</th>
                            <th>Delete</th>
                        </thead>

                        <tbody>


                            <% data.forEach(function(data){%>
                                <tr>
                                    <td>
                                        <%=data.Image_ID%>
                                    </td>
                                    <td>
                                        <%=data.Service%>
                                    </td>
                                    <td><img src="<%=data.Imageurl%>" alt="Imagedata" class="imagetopic"> </td>
                                    <td>
                                        <a href="/delimage/<%=data.Image_ID%>"> <button>
                                                Delete
                                            </button></a>
                                    </td>
                                </tr>






                                <%})%>
                        </tbody>
                    </table>

                    <%}%>

            </div>
        </div>
    </div>




    <!-- bootom script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
        crossorigin="anonymous"></script>


</body>

</html>